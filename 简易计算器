#include <stdio.h>
#include <string.h> 
int main()
{
	printf("该计算器只能进行个位数的整数四则运算\n请输入：\n");
	int b,d,c;
	char a[1000];
	gets(a);
    d=strlen(a);
	for( b=0 ; b<d ; b++)
	{
		if(a[b]=='*')
		{
			a[b+1]=( a[b-1] - '0' ) * ( a[b+1] - '0' )+'0';
			a[b-1]='0';
			if(a[b-2]=='+'||b<2)
			{
				a[b]='+';
			}
			else if(a[b-2]=='-')
			{
				a[b]='-';
			}
		}
		if(a[b]=='/')
		{
			a[b+1]=( a[b-1] - '0' ) / ( a[b+1] - '0' )+'0';
			a[b-1]='0';
			if(a[b-2]=='+'||b<2)
			{
				a[b]='+';
			}
			else if(a[b-2]=='-')
			{
				a[b]='-';
			}
		}
	}
	c=a[0]-'0';
	for(b=0 ; b<d; b++ )
	{
		if(a[b]=='+')
		{
			c=c+( a[b+1] - '0' );
		}
		if(a[b]=='-')
		{
			c=c-( a[b+1] - '0' );
		}
	}
	printf("值为：%d\n",c);
	return 0;
}
